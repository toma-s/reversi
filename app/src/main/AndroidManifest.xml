<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="app.reversi">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/reversi_logo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/reversi_logo"
            android:supportsRtl="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.PlaygroundActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.AuthActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.ConnectActivity"/>
    </application>

</manifest>